<div class="continer-fluid container-fluid-fitnote pb-5 mb-4">
  <div class="row mb-">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
          <li class="breadcrumb-item active">New Note</li>
        </ol>
      </nav>
      <div class="col d-flex justify-content-between align-items-center">
        <h3>New Note</h3>
      </div>
    </div>
  </div>
  <form action="/dashboard/note-create" method="POST" class="position-relative">
    <div class="form-group mb-2">
      <input
        type="text"
        class="form-control border-0 fw-bold"
        id="title"
        name="title"
        placeholder="Note Title"
      />
    </div>
    <div class="form-group mb-4">
      <textarea
      class="form-control border-0 fw-bold"
      id="noteBody"
      name="noteBody"
      placeholder="Write a note!"
    ></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-secondary btn-create btn-lg">Add</button>
    </div>
  </form>
</div>
